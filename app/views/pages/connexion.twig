{% extends "layout.twig" %}
{% block content %}
    {% if flash.success %}
        <div>
            {{ flash.success }}
        </div>
    {% endif %}
    {% if flash.error %}
        <div>
            {{ flash.error }}
        </div>
    {% endif %}
    <div class="contact-title">
        <h3 class="h3"> Inscription</h3>
    </div>
    <form action="{{ path_for('connexion') }}" method="post" class="form">
        {{ csrf() }}
        <div class="{% if flash.errors.login %}has-error{% endif %}">
            <label>Nom d'utilisateur</label>
            <input type="text" name="login" id="login" value="" required>
            {% if flash.errors.login %}
                <span class="help-block">{{ flash.errors.login }}</span>
            {% endif %}
        </div>
        <div class="{% if flash.errors.mdp %}has-error{% endif %}">
            <label>Mot de passe</label>
            <input type="password" name="mdp" id="mdp" required>
            {% if flash.errors.mdp %}
                <span class="help-block">{{ flash.errors.mdp }}</span>
            {% endif %}
        </div>
        <div>
            <input type="submit" value="Valider">
        </div>
    </form>
{% endblock %}