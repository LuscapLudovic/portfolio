{% extends "layout.twig" %}
{% block content %}
    {% if flash.success %}
        <div>
            {{ flash.success }}
        </div>
    {% endif %}
    {% if flash.error %}
        <div>
            {{ flash.error }}
        </div>
    {% endif %}
    <div class="contact-title">
        <h3 class="h3"> Inscription</h3>
    </div>
    <form method="post" class="form">
        <div>
            <label class="label">Nom d'utilisateur</label><br>
            <input class="form-control-little" type="text" name="login" id="login" value="" required>
        </div>
        <div>
            <label class="label">Adresse e-mail</label><br>
            <input class="form-control-little" type="email" name="email" id="email" value="" required>
        </div>
        <div>
            <label class="label">Mot de passe</label><br>
            <input class="form-control-little" type="password" name="mdp" id="mdp" required>
        </div>
        <div>
            <label></label>
        </div>
        <div>
            <input class="btn-submit" onClick="alert('Votre inscription a bien été prise en compte ! Vous pouvez désormais accéder à toutes les pages.');" type="submit" value="Valider">
        </div>
    </form>
{% endblock %}